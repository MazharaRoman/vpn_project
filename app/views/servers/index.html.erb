<p id="notice"><%= notice %></p>

<h1>Listing Servers</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Ip</th>
      <th>Region</th>
      <th>Server user</th>
      <th>Key</th>
      <th>Configpath</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.type %></td>
        <td><%= server.ip %></td>
        <td><%= server.region %></td>
        <td><%= server.server_user %></td>
        <td><%= server.key %></td>
        <td><%= server.configPath %></td>
        <td><%= link_to 'Show', server %></td>
        <td><%= link_to 'Edit', edit_server_path(server) %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

